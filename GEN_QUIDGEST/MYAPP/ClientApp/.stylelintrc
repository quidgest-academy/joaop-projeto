{
	"extends": "stylelint-config-standard-scss",
	"rules": {
		"max-nesting-depth": 3,
		"selector-max-compound-selectors": 4,
		"property-no-vendor-prefix": null,
		"selector-class-pattern": "[a-z]+(_-[a-z]+)*",
		"unit-allowed-list": ["em", "rem", "s", "vw", "vh", "%", "deg", "px", "lh", "turn", "fr"]
	}
}
