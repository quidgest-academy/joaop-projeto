{
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter=geniovue.js dev",
    "clean": "rimraf temp .eslintcache && pnpm -r clean",
    "build": "pnpm build:packages && pnpm build:app",
    "build:app": "pnpm --filter=geniovue.js build",
		"build:packages": "pnpm --filter @quidgest/* run build",
    "type-check": "pnpm -r type-check",
    "format": "prettier --check --cache .",
    "format:fix": "prettier --write --cache .",
    "lint": "eslint --flag unstable_config_lookup_from_file --cache .",
    "lint:fix": "pnpm lint --fix",
    "lint:style": "stylelint \"**/*.scss\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:no-color": "vitest --no-color",
    "storybook": "pnpm --filter=geniovue.js storybook",
    "build:storybook": "pnpm --filter=geniovue.js build:storybook"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.13.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vitest/coverage-v8": "^3.2.0",
    "@vitest/eslint-plugin": "^1.1.38",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.19.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-storybook": "^0.11.6",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "16.0.0",
    "happy-dom": "^17.0.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "sass": "^1.83.4",
    "stylelint": "^16.14.1",
    "stylelint-config-standard-scss": "^14.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.15.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  }
}
