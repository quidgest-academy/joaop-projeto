root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = crlf
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true

# JSON + YAML Files
[*.{json,yml,yaml,scss}]
indent_style = space
indent_size = 2

# Markdown Files
[*.{md,mdx}]
trim_trailing_whitespace = false